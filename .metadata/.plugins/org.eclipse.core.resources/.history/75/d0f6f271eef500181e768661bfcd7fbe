	public static final Target FLIGHT_TYPE_ONE_WAY = Target.the("Type of flight one way").located(By.cssSelector("body.lan:nth-child(2) main.ha-waypoint:nth-child(7) section.l-section:nth-child(3) div.container div.parbase.cajaDeReserva.base.reserva.xk-component.xk-section-base div.Sales.col-md-12.col-lg-12.col-xs-12.col-center div.homepage__bookingbox-region:nth-child(2) div.bookingbox.tabs.layout-component div.container-fluid.lan div.row div.col-sm-9.col-xs-12.shadow-box-mobile div.row.panel-group.color-bg.color-bg-tabpanel div.panel.col-sm-12.col-xs-12:nth-child(1) div.no-transition.panel-collapse.collapse.in.color-bg div.col-xs-12 div.row div.col-sm-push-0.col-xs-12.col-sm-12 div.bookingbox__compra-region.tabs__compra-region.layout-component__compra-region div.compra.layout-component div.compra__compra-region form.compra.compra-form.form.layout-component div.color-bg div.row div.col-xs-12 div.row div.compra__flight-date-region div.flight-date.layout-component div.flightDate-calendar div.col-xs-12 div.row div.col-xs-12.col-sm-push-0.col-sm-12.radio-group-switch div.flight-date__fligth-type-region.fligths-group-switch div.radio-group.item-component fieldset.row.radiobutton-component.radiobutton-box.col-xs-12.col-sm-push-0.col-sm-12 div.check-btn.col-sm-3.active:nth-child(3) > input.showDepartureOnly:nth-child(1)"));
	public static final Target FLIGHT_TYPE_ROUND_TRIP = Target.the("Type of flight round trip").located(By.xpath("//div[contains(@class,'compra__flight-date-region')]//label[contains(@data-value,'showDepartureAndReturn')]"));
