/*SuiteTest1 es una clase de prueba que tiene un método de prueba para imprimir un mensaje como 
se muestra a continuación.*/

import static org.junit.Assert.assertEquals;//Validaciones con Junit.			
import org.junit.Test;		

public class SuiteTest1 {
	
	public String message = "Estefania";							

    JUnitMessage junitMessage = new JUnitMessage (message);							

    @Test (expected = ArithmeticException.class)					 
    public void testJUnitMessage () {					 

        System.out.println ("Junit Message is printing");					
        junitMessage.printMessage ();			

    }		 

    @Test		 
    public void testJUnitHiMessage () {		
    	
        message = "Hi!" + message;							
        System.out.println ("Junit Hi Message is printing");					
        Assert.assertEquals(mensaje, junitMessage.printHiMessage ());					
        System.out.println ("Suite Test 2 tiene éxito" + mensaje);							
    }	
}
